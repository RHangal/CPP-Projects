{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build with GCC 12.2.0",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++20",
        "-g",
        "${workspaceFolder}//*.cpp",
        "-o",
        "${fileDirname}/vendingMachine.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/g++"
    },
    {
      "type": "cppbuild",
      "label": "Build with non Apple Clang",
      "command": "/usr/bin/clang++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++20",
        "-g",
        "${workspaceFolder}//*.cpp",
        "-o",
        "${fileDirname}/vendingMachine.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/clang++"
    }
  ]
}
